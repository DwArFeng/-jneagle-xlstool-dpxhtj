<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>release</id>

    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <fileMode>0755</fileMode>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <outputDirectory>conf/modal</outputDirectory>
            <directory>src/main/resources/modal</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/data-import</outputDirectory>
            <directory>src/main/resources/data-import</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/data-export</outputDirectory>
            <directory>src/main/resources/data-export</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/data-export</outputDirectory>
            <directory>src/main/resources/data-export</directory>
            <includes>
                <include>*.xls</include>
                <include>*.xlsx</include>
            </includes>
            <filtered>false</filtered>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf/xlstool</outputDirectory>
            <directory>src/main/resources/xlstool</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>example</outputDirectory>
            <directory>example</directory>
            <filtered>false</filtered>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>README.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>CHANGELOG.md</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>./</outputDirectory>
            <source>LICENSE</source>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <outputDirectory>lib</outputDirectory>
            <source>${project.build.directory}/${project.name}-${project.version}.jar</source>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <outputDirectory>bin</outputDirectory>
            <source>src/assembly/xlstool-start.bat</source>
            <filtered>true</filtered>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </file>
    </files>
</assembly>
